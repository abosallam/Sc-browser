<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Holo.Light"
    android:id="@+id/homepage"
    tools:context="com.example.sonu1.scbrowser.MainActivity">

    <EditText
        android:id="@+id/edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="#dad7d7"
        android:inputType="textUri"
        android:hint="Enter address or search"
        android:layout_alignBottom="@+id/search"
        android:layout_toLeftOf="@+id/search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/search"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/search" />

    <Button
        android:id="@+id/facebook"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/facebook"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/edittext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/youtube"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/youtube"
        android:layout_above="@+id/twitter"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/google"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/youtube"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/google" />

    <Button
        android:id="@+id/twitter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/facebook"
        android:layout_alignStart="@+id/facebook"
        android:layout_below="@+id/facebook"
        android:layout_marginTop="32dp"
        android:background="@drawable/twitter" />

    <Button
        android:id="@+id/msn"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignEnd="@+id/youtube"
        android:layout_alignRight="@+id/youtube"
        android:layout_alignTop="@+id/twitter"
        android:background="@drawable/msn" />

    <Button
        android:id="@+id/amazon"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignBottom="@+id/msn"
        android:layout_alignLeft="@+id/google"
        android:layout_alignStart="@+id/google"
        android:background="@drawable/amazon" />

    <ListView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_above="@+id/home"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/twitter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line1">

        <Button
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:background="@drawable/home"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBaseline="@+id/exit"/>

        <Button
            android:id="@+id/exit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/exit" />
    </RelativeLayout>


</RelativeLayout>
